#!/usr/bin/env bash

PACKAGE_NAME="cmake"
PACKAGE_DESCRIPTION='CMake is an open-source, cross-platform family of tools designed to build, test, and package software.'
PACKAGE_VERSION="4.1.1"
PACKAGE_URI="https://github.com/Kitware/CMake"
PACKAGE_DEPENDENCIES=(
    gcc-g++
    coreutils
)
PACKAGE_ARCH="any"

prepare() {
    git clone $PACKAGE_URI $TMP
    cd $TMP
}

build() {
    ./bootstrap && make
}

finish() {
    sudo make install
}
